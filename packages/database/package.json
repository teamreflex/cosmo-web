{
  "name": "@apollo/database",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx}\""
  },
