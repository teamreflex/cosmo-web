    "./auth": "./src/auth.ts",
    "./custom": "./src/custom.ts"
  },
  "dependencies": {
    "@apollo/cosmo": "workspace:*",
    "@apollo/util": "workspace:*",
    "drizzle-orm": "^1.0.0-beta.2-b705c25"
  },
  "devDependencies": {
    "@apollo/eslint": "workspace:*",
    "@apollo/typescript": "workspace:*",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "eslint": "9.39.1",
    "prettier": "^3.7.4",
    "turbo": "^2.6.1",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
