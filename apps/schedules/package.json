{
  "name": "schedules",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "bun run --bun --watch --env-file=../../.env --env-file=../../.env.local ./src/main.ts",
    "build": "bun build ./src/main.ts --outdir ./dist --target bun",
    "start": "bun run --bun dist/main.js",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "typecheck": "tsc --pretty --noEmit",
    "format": "oxfmt ."
  },
  "dependencies": {
    "@apollo/cosmo": "workspace:*",
    "@apollo/database": "workspace:*",
    "@apollo/util": "workspace:*",
    "@effect/cluster": "^0.56.1",
    "@effect/platform": "^0.94.1",
    "@effect/platform-bun": "^0.87.0",
    "drizzle-orm": "1.0.0-beta.6-4414a19",
    "effect": "^3.19.14",
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "@apollo/typescript": "workspace:*",
    "@effect/build-utils": "^0.8.9",
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/language-service": "^0.64.1",
    "@types/bun": "1.3.5",
    "typescript": "^5.9.3"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
