{
  "name": "schedules",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run --bun --watch --env-file=../../.env --env-file=../../.env.local ./src/main.ts",
    "build": "bun build ./src/main.ts --outdir ./dist --target bun",
    "start": "bun run --bun dist/main.js",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx}\""
  },
  "license": "MIT",
  "dependencies": {
    "@apollo/cosmo": "workspace:*",
    "@apollo/database": "workspace:*",
    "@apollo/util": "workspace:*",
    "@effect/cluster": "^0.52.9",
    "@effect/platform": "^0.93.1",
    "@effect/platform-bun": "^0.83.0",
    "drizzle-orm": "1.0.0-beta.1-ac4ce44",
    "effect": "^3.19.3",
    "jose": "^6.1.1"
  },
  "devDependencies": {
    "@apollo/eslint": "workspace:*",
    "@apollo/typescript": "workspace:*",
    "@effect/build-utils": "^0.8.9",
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/language-service": "^0.55.3",
    "@eslint/compat": "1.4.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.39.1",
    "@types/bun": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
