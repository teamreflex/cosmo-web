{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "cache": true,
      "outputs": ["lib/**"]
    },
    "typecheck": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": false
    },
    "format": {
      "cache": true
    }
  }
}
