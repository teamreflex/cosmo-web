{
  "extends": "@apollo/typescript/tsconfig.base.json",

  "include": ["**/*.ts", "**/*.tsx", "vite.config.mts"],
  "exclude": [".output", "dist", ".tanstack", "apps/web/.vercel"],

  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "@types/umami"],

    // for paraglide
    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
