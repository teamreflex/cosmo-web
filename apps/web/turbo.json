{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "cache": true,
      "outputs": [".output/**"],
      "env": [
        "DATABASE_URL",
        "INDEXER_DATABASE_URL",
        "AUTH_KEY",
        "ABSTRACT_RPC",
        "BETTER_AUTH_SECRET",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "TWITTER_CLIENT_ID",
        "TWITTER_CLIENT_SECRET",
        "MAIL_SES_REGION",
        "MAIL_SES_FROM",
        "MAIL_SES_ACCESS_KEY",
        "MAIL_SES_SECRET_KEY",
        "COSMO_RECAPTCHA_KEY",
        "BROWSERLESS_API_KEY",
        "BROWSERLESS_BASE_URL",
        "REDIS_URL",
        "INTERNAL_TYPESENSE_URL"
      ]
    },
    "start": {
      "with": ["//#services"],
      "persistent": true,
      "cache": false
    },
    "dev": {
      "with": ["//#services"],
      "persistent": true,
      "cache": false
    },
    "typecheck": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": false
    },
    "format": {
      "cache": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "i18n": {
      "cache": false
    },
    "test": {
      "persistent": true,
      "cache": false
    }
  }
}
