{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "env": "bun run --bun --env-file=../../.env --env-file=../../.env.local",
    "dev": "bun run env -- bun run --bun vite dev",
    "build": "bun run env -- bun run --bun vite build",
    "build:prod": "bun run --bun i18n && bun run --bun typecheck && bun run --bun vite build --mode production",
    "preview": "bun run build && bun run env -- bun run start",
    "start": "bun run --bun main.ts",
    "test": "bun test",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:upgrade": "drizzle-kit up",
    "db:migrate": "bun run env -- drizzle-kit migrate",
    "auth:generate": "bun run env -- bunx @better-auth/cli generate --output ../../packages/database/src/auth.ts --y",
    "i18n": "bunx @inlang/paraglide-js compile --project ./project.inlang --outdir ./src/i18n"
  },
  "dependencies": {
    "@apollo/cosmo": "workspace:*",
    "@apollo/database": "workspace:*",
    "@apollo/util": "workspace:*",
    "@aws-sdk/client-ses": "^3.940.0",
    "@fontsource-variable/dm-sans": "^5.2.8",
    "@hookform/resolvers": "^5.2.2",
    "@sentry/tanstackstart-react": "^10.27.0",
    "@t3-oss/env-core": "^0.13.8",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-router": "^1.139.7",
    "@tanstack/react-router-ssr-query": "^1.139.7",
    "@tanstack/react-start": "^1.139.8",
    "@tanstack/react-virtual": "^3.13.12",
    "better-auth": "1.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "1.0.0-beta.1-ac4ce44",
    "input-otp": "^1.4.2",
    "jose": "^6.1.2",
    "lucide-react": "^0.555.0",
    "motion": "^12.23.24",
    "ofetch": "^1.5.1",
    "radix-ui": "^1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.66.1",
    "react-intersection-observer": "^10.0.0",
    "react-player": "^3.4.0",
    "react-qr-code": "^2.0.18",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "srvx": "^0.9.6",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "typesense": "^2.1.0",
    "usehooks-ts": "^3.1.1",
    "vaul": "^1.1.2",
    "viem": "^2.40.3",
    "wagmi": "^3.0.2",
    "zod": "^4.1.13",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@apollo/eslint": "workspace:*",
    "@apollo/typescript": "workspace:*",
    "@eslint/eslintrc": "^3.3.1",
    "babel-plugin-react-compiler": "1.0.0",
    "@eslint/js": "^9.39.1",
    "@inlang/paraglide-js": "2.5.0",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/devtools-vite": "^0.3.11",
    "@tanstack/eslint-config": "^0.3.3",
    "@tanstack/react-devtools": "^0.8.2",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@tanstack/eslint-plugin-router": "^1.139.0",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/react-router-devtools": "^1.139.7",
    "@types/bun": "^1.3.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/umami": "^2.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@vitejs/plugin-react": "^5.1.1",
    "drizzle-kit": "1.0.0-beta.1-ac4ce44",
    "eslint": "9.39.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-google-translate": "^0.1.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.17",
    "turbo": "^2.6.1",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "./src/styles/tailwind.css",
    "tailwindFunctions": [
      "cn",
      "clsx"
    ],
    "trailingComma": "all"
  }
}
