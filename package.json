{
  "name": "apollo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "services": "dotenv -c -- ./start.sh"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.2",
  "engines": {
    "bun": ">=1.3"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "viem": "^2.39.0",
    "abitype": "^1.1.0"
  }
}
